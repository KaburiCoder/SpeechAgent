<UserControl
  x:Class="SpeechAgent.Features.Settings.FindWin.Controls.ControlPosBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SpeechAgent.Features.Settings.FindWin.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  x:Name="Root"
  d:DesignHeight="60"
  d:DesignWidth="400"
  mc:Ignorable="d">
  <Border
    Padding="10"
    Background="WhiteSmoke"
    BorderBrush="LightGray"
    BorderThickness="1"
    CornerRadius="5">
    <StackPanel Orientation="Horizontal">
      <TextBlock
        Margin="0,0,10,0"
        VerticalAlignment="Center"
        FontWeight="SemiBold"
        Text="{Binding Title, ElementName=Root}" />
      <TextBlock
        Margin="0,0,5,0"
        VerticalAlignment="Center"
        FontSize="12"
        Text="컨트롤:" />
      <TextBlock
        Width="120"
        Margin="0,0,10,0"
        Padding="5"
        VerticalAlignment="Center"
        Background="WhiteSmoke"
        FontSize="12"
        Text="{Binding ControlType, ElementName=Root}" />
      <TextBlock
        Margin="0,0,5,0"
        VerticalAlignment="Center"
        FontSize="12"
        Text="인덱스:" />
      <TextBlock
        Width="60"
        Padding="5"
        VerticalAlignment="Center"
        Background="WhiteSmoke"
        FontSize="12"
        Text="{Binding Index, ElementName=Root}" />
    </StackPanel>
  </Border>
</UserControl>
