<UserControl x:Class="SpeechAgent.Features.Settings.FindWin.Controls.ControlListHeader"
   x:Name="Root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
   xmlns:local="clr-namespace:SpeechAgent.Features.Settings.FindWin.Controls"
 mc:Ignorable="d" 
       d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
   <Style x:Key="CustomButtonStyle" TargetType="Button">
    <Setter Property="Template">
       <Setter.Value>
    <ControlTemplate TargetType="Button">
  <Border Background="{TemplateBinding Background}" 
   BorderBrush="{TemplateBinding BorderBrush}" 
          BorderThickness="{TemplateBinding BorderThickness}" 
      CornerRadius="5">
  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        </ControlTemplate>
             </Setter.Value>
       </Setter>
   <Style.Triggers>
   <Trigger Property="IsMouseOver" Value="True">
   <Setter Property="Background" Value="#005A9E"/>
   </Trigger>
  <Trigger Property="IsPressed" Value="True">
         <Setter Property="Background" Value="#004080"/>
   </Trigger>
 </Style.Triggers>
   </Style>
    </UserControl.Resources>

    <StackPanel Margin="0,0,0,5">
  <TextBlock Text="{Binding Title, ElementName=Root}" 
        FontSize="18" 
 FontWeight="Bold" 
    Margin="0,0,0,3"/>
        <TextBlock Text="{Binding WindowTitle, ElementName=Root}" 
      FontSize="14" 
      Foreground="Gray"
TextWrapping="Wrap"
       Margin="0,0,0,3"/>
 <TextBlock FontSize="12" Foreground="Gray">
        <Run Text="총 "/>
    <Run Text="{Binding ControlCount, ElementName=Root}" FontWeight="Bold"/>
     <Run Text="개의 컨트롤"/>
    </TextBlock>
        <TextBlock Text="{Binding LoadingText, ElementName=Root}" 
    FontSize="12" 
      Foreground="Blue"
       Margin="0,5,0,0"
    Visibility="{Binding IsLoading, ElementName=Root, Converter={StaticResource BoolToVisibility}}"/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
        <TextBlock Text="{Binding SearchLabel, ElementName=Root}" 
          FontSize="12" 
        Foreground="Gray"
    VerticalAlignment="Center"/>
    <TextBox Text="{Binding SearchText, ElementName=Root, UpdateSourceTrigger=PropertyChanged}" 
Width="200" 
 Margin="10,0,0,0" 
   FontSize="14" 
          VerticalContentAlignment="Center">
  <TextBox.InputBindings>
      <KeyBinding Key="Enter" Command="{Binding SearchCommand, ElementName=Root}"/>
    </TextBox.InputBindings>
   </TextBox>
   <Button Content="{Binding SearchButtonText, ElementName=Root}" 
    Command="{Binding SearchCommand, ElementName=Root}"
Width="60" 
   Height="30" 
         Margin="10,0,0,0"
   FontSize="12"
   Background="#007ACC"
     Foreground="White"
        BorderThickness="0"
      Style="{StaticResource CustomButtonStyle}">
          </Button>
 </StackPanel>
    </StackPanel>
</UserControl>
