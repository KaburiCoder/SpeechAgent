<UserControl
  x:Class="SpeechAgent.Controls.DirectoryControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SpeechAgent.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>
    <!--  Directory Path TextBox  -->
    <TextBox
      x:Name="DirectoryPathTextBox"
      Grid.Column="0"
      Margin="0,0,5,0"
      Text="{Binding RelativeSource={RelativeSource AncestorType=local:DirectoryControl}, Path=DirPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    <!--  Directory Browse Button  -->
    <Button
      x:Name="BrowseDirectoryButton"
      Grid.Column="1"
      Width="30"
      Margin="0,0,5,0"
      Click="BrowseDirectoryButton_Click"
      Content="..." />
  </Grid>
</UserControl>
