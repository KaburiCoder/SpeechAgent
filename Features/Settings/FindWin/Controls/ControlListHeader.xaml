<UserControl
  x:Class="SpeechAgent.Features.Settings.FindWin.Controls.ControlListHeader"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SpeechAgent.Features.Settings.FindWin.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  x:Name="Root"
  d:DesignHeight="200"
  d:DesignWidth="400"
  mc:Ignorable="d">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    <Style x:Key="CustomButtonStyle" TargetType="Button">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="5">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#005A9E" />
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#004080" />
        </Trigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>

  <StackPanel Margin="0,0,0,5">
    <TextBlock
      Margin="0,0,0,3"
      FontSize="18"
      FontWeight="Bold"
      Text="{Binding Title, ElementName=Root}" />
    <TextBlock
      Margin="0,0,0,3"
      FontSize="14"
      Foreground="Gray"
      Text="{Binding WindowTitle, ElementName=Root}"
      TextWrapping="Wrap" />
    <TextBlock FontSize="12" Foreground="Gray">
      <Run Text="총 " />
      <Run FontWeight="Bold" Text="{Binding ControlCount, ElementName=Root}" />
      <Run Text="개의 컨트롤" />
    </TextBlock>
    <TextBlock
      Margin="0,5,0,0"
      FontSize="12"
      Foreground="Blue"
      Text="{Binding LoadingText, ElementName=Root}"
      Visibility="{Binding IsLoading, ElementName=Root, Converter={StaticResource BoolToVisibility}}" />
    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
      <TextBlock
        VerticalAlignment="Center"
        FontSize="12"
        Foreground="Gray"
        Text="{Binding SearchLabel, ElementName=Root}" />
      <TextBox
        Width="200"
        Margin="10,0,0,0"
        VerticalContentAlignment="Center"
        FontSize="14"
        Text="{Binding SearchText, ElementName=Root, UpdateSourceTrigger=PropertyChanged}">
        <TextBox.InputBindings>
          <KeyBinding Key="Enter" Command="{Binding SearchCommand, ElementName=Root}" />
        </TextBox.InputBindings>
      </TextBox>
      <Button
        Width="60"
        Height="30"
        Margin="10,0,0,0"
        Background="#007ACC"
        BorderThickness="0"
        Command="{Binding SearchCommand, ElementName=Root}"
        Content="{Binding SearchButtonText, ElementName=Root}"
        FontSize="12"
        Foreground="White"
        Style="{StaticResource CustomButtonStyle}" />
    </StackPanel>
  </StackPanel>
</UserControl>
