<Window
  x:Class="SpeechAgent.Features.UpdateHistory.UpdateHistoryView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SpeechAgent.Features.UpdateHistory"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:md="http://schemas.lepo.co/wpfui/2022/xaml/markdown"
  xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
  Title="업데이트 히스토리"
  Width="650"
  Height="500"
  MinWidth="650"
  MinHeight="500"
  AllowsTransparency="True"
  Background="Transparent"
  WindowStartupLocation="CenterScreen"
  WindowStyle="None"
  mc:Ignorable="d">
  <shell:WindowChrome.WindowChrome>
    <shell:WindowChrome
      CaptionHeight="40"
      CornerRadius="0"
      GlassFrameThickness="0"
      ResizeBorderThickness="5" />
  </shell:WindowChrome.WindowChrome>

  <Border
    Background="White"
    BorderBrush="#E0E0E0"
    BorderThickness="1">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="40" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <!--  커스텀 헤더  -->
      <Border
        Grid.Row="0"
        Background="#2D3748"
        MouseLeftButtonDown="OnHeaderMouseLeftButtonDown">
        <Grid shell:WindowChrome.IsHitTestVisibleInChrome="True">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>

          <TextBlock
            Grid.Column="0"
            Margin="15,0,0,0"
            VerticalAlignment="Center"
            FontSize="13"
            FontWeight="SemiBold"
            Foreground="White"
            Text="업데이트 히스토리" />

          <!--  종료 버튼  -->
          <Button
            Grid.Column="1"
            Width="40"
            Height="40"
            Padding="0"
            shell:WindowChrome.IsHitTestVisibleInChrome="True"
            Background="Transparent"
            BorderThickness="0"
            Click="OnCloseButtonClick"
            Cursor="Hand">
            <Button.Style>
              <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Style.Triggers>
                  <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53E3E" />
                  </Trigger>
                </Style.Triggers>
              </Style>
            </Button.Style>
            <TextBlock
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              FontSize="18"
              Foreground="White"
              Text="✕" />
          </Button>
        </Grid>
      </Border>

      <!--  컨텐츠  -->
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="150" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  좌측 파일 리스트  -->
        <Grid Grid.Column="0" Background="White">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <!--  헤더  -->
          <Border
            Grid.Row="0"
            Padding="12,10"
            Background="#F7FAFC"
            BorderBrush="#E2E8F0"
            BorderThickness="0,0,1,1">
            <TextBlock
              FontSize="12"
              FontWeight="SemiBold"
              Foreground="#2D3748"
              Text="버전" />
          </Border>

          <!--  리스트  -->
          <ListBox
            Grid.Row="1"
            Background="White"
            BorderBrush="#E2E8F0"
            BorderThickness="0,0,1,0"
            ItemsSource="{Binding UpdateFiles}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectedItem="{Binding SelectedUpdate}">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border
                  Padding="10,8"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  BorderThickness="0,0,0,1"
                  Cursor="Hand">
                  <Border.Style>
                    <Style TargetType="Border">
                      <Setter Property="Background" Value="White" />
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=ListBoxItem}}" Value="True">
                          <Setter Property="Background" Value="#EBF8FF" />
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                          <Setter Property="Background" Value="#F7FAFC" />
                        </Trigger>
                      </Style.Triggers>
                    </Style>
                  </Border.Style>

                  <TextBlock
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#2D3748"
                    Text="{Binding DisplayName}" />
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </Grid>

        <!--  우측 마크다운 뷰어  -->
        <Grid Grid.Column="1" Background="#FAFAFA">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <!--  헤더  -->
          <Border
            Grid.Row="0"
            Padding="15,10"
            Background="#F7FAFC"
            BorderBrush="#E2E8F0"
            BorderThickness="1,0,0,1">
            <TextBlock
              FontSize="12"
              FontWeight="SemiBold"
              Foreground="#2D3748"
              Text="{Binding SelectedUpdate.DisplayName, StringFormat='변경사항 - {0}'}" />
          </Border>

          <!--  마크다운 뷰어  -->
          <Border Grid.Row="1" Margin="0,0,0,0">
            <ScrollViewer PreviewMouseWheel="OnMarkdownScrollViewerMouseWheel" VerticalScrollBarVisibility="Auto">
              <md:MarkdownViewer Margin="15" Markdown="{Binding MarkdownContent}" />
            </ScrollViewer>
          </Border>

          <!--  로딩 표시  -->
          <Grid
            Grid.Row="1"
            Background="#00000033"
            Opacity="0"
            Visibility="Collapsed">
            <Grid.Style>
              <Style TargetType="Grid">
                <Style.Triggers>
                  <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                    <Setter Property="Opacity" Value="1" />
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Grid.Style>

            <TextBlock
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              FontSize="14"
              Foreground="White"
              Text="로딩 중..." />
          </Grid>
        </Grid>
      </Grid>
    </Grid>
  </Border>
</Window>
