<Window x:Class="SpeechAgent.Features.Main.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechAgent.Features.Main"
        xmlns:vm="clr-namespace:SpeechAgent.Features.Main"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        mc:Ignorable="d"
        Title="Voice Medic Agent" Height="450" Width="400" 
        WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- 헤더 -->
    <materialDesign:Card Grid.Row="0" Margin="10,10,10,5" Padding="10">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0" Text="Voice Medic Agent" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
        
        <StackPanel Grid.Column="1" Orientation="Horizontal">
          <Button Margin="0,0,5,0" Command="{Binding CheckForUpdatesCommand}" 
                  ToolTip="업데이트 확인" Style="{StaticResource MaterialDesignIconButton}">
            <materialDesign:PackIcon Kind="Update" Width="18" Height="18" />
          </Button>
          <Button Command="{Binding ShowSettingsCommand}" 
                  ToolTip="설정" Style="{StaticResource MaterialDesignIconButton}">
            <materialDesign:PackIcon Kind="CogOutline" Width="18" Height="18" />
          </Button>
        </StackPanel>
      </Grid>
    </materialDesign:Card>

    <Grid Grid.Row="1">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 업데이트 알림 카드 -->
        <materialDesign:Card Grid.Row="0" Margin="10,0,10,5" Padding="8" 
                             Background="Orange" Foreground="White"
                             Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon Grid.Column="0" Kind="Update" Width="20" Height="20" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Margin="8,0,0,0">
              <TextBlock Text="업데이트 사용 가능" FontWeight="Bold" FontSize="12"/>
              <TextBlock Text="{Binding UpdateVersion, StringFormat='새 버전: {0}'}" FontSize="10"/>
            </StackPanel>
          </Grid>
        </materialDesign:Card>
        
        <!-- 상태 정보 카드 (컴팩트) -->
        <materialDesign:Card Grid.Row="1" Margin="10,0,10,5" Padding="8">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 서버 연결 상태 -->
            <Grid Grid.Row="0" Margin="0,0,0,4">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <materialDesign:PackIcon Grid.Column="0" 
                                       Kind="CheckCircle" Foreground="Green" 
                                       Visibility="{Binding IsSIOConnected, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                       Width="16" Height="16" VerticalAlignment="Center"/>
              <materialDesign:PackIcon Grid.Column="0" 
                                       Kind="CloseCircle" Foreground="Red" 
                                       Visibility="{Binding IsSIOConnected, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                       Width="16" Height="16" VerticalAlignment="Center"/>
              <TextBlock Grid.Column="1" Text="서버 연결" FontSize="12" VerticalAlignment="Center" Margin="6,0,0,0"/>
            </Grid>
            
            <!-- 방 접속 상태 -->
            <Grid Grid.Row="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>
              <materialDesign:PackIcon Grid.Column="0" 
                                       Kind="CheckCircle" Foreground="Green" 
                                       Visibility="{Binding IsJoinedRoom, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                       Width="16" Height="16" VerticalAlignment="Center"/>
              <materialDesign:PackIcon Grid.Column="0" 
                                       Kind="CloseCircle" Foreground="Red" 
                                       Visibility="{Binding IsJoinedRoom, Converter={StaticResource InverseBooleanToVisibilityConverter}}" 
                                       Width="16" Height="16" VerticalAlignment="Center"/>
              <TextBlock Grid.Column="1" Text="방 접속" FontSize="12" VerticalAlignment="Center" Margin="6,0,0,0"/>
            </Grid>
          </Grid>
        </materialDesign:Card>
        
        <!-- 환자 정보 리스트 -->
        <materialDesign:Card Grid.Row="2" Margin="10,0,10,10" Padding="5">
          <ListView ItemsSource="{Binding PatInfos}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
              <DataTemplate>
                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5,8" Margin="0,0,0,2">
                  <Grid>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="Auto"/>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Chart}" FontSize="13" FontWeight="Bold" VerticalAlignment="Top"/>
                    <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="13" VerticalAlignment="Top" Margin="10,0,0,0"/>
                    <TextBlock Grid.Column="2" Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" FontSize="10" 
                               Foreground="Gray" VerticalAlignment="Top"/>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
        </materialDesign:Card>
      </Grid>
    </Grid>
  </Grid>
</Window>
