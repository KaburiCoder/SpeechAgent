<Window
  x:Class="SpeechAgent.TestApp"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:SpeechAgent.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SpeechAgent"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Hotkey Recorder"
  Width="800"
  Height="450"
  mc:Ignorable="d">
  <Grid>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
      <controls:ShortcutTextBox
        x:Name="ShortcutInput"
        Width="300"
        Height="50"
        Margin="0,0,0,30"
        InputKey="A"
        InputModifiers="Alt+Shift" />
      <TextBlock
        Margin="0,0,0,20"
        HorizontalAlignment="Center"
        FontSize="16"
        FontWeight="Bold"
        Text="핫키를 입력하세요 (복합키만 인식됩니다)" />

      <TextBox
        x:Name="HotKeyTextBox"
        Width="300"
        Height="50"
        Margin="0,0,0,20"
        Padding="10"
        Background="#F0F0F0"
        BorderBrush="#CCCCCC"
        BorderThickness="2"
        FontSize="20"
        IsReadOnly="True"
        TextAlignment="Center" />

      <TextBlock
        Margin="0,0,0,10"
        FontSize="14"
        FontWeight="Bold"
        Text="표시된 핫키:" />
      <TextBlock
        x:Name="DisplayTextBlock"
        MinHeight="30"
        Margin="0,0,0,20"
        FontSize="18"
        Foreground="#0066CC"
        TextAlignment="Center" />

      <TextBlock
        HorizontalAlignment="Center"
        FontSize="12"
        Foreground="Gray"
        Text="예시: Ctrl+A, Alt+Shift+S, etc." />
    </StackPanel>
  </Grid>
</Window>
